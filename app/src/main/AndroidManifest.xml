<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.bleepr.floor.bleepriofloormanagement" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PostLoginMenuActivity" >
        </activity>
        <activity
            android:name=".TableListActivity"
            android:label="@string/title_table_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".TableDetailActivity"
            android:label="@string/title_table_detail"
            android:parentActivityName=".TableListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.bleepr.floor.bleepriofloormanagement.TableListActivity" />
        </activity>
        <activity
            android:name=".OrderListActivity"
            android:label="@string/title_order_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".OrderDetailActivity"
            android:label="@string/title_order_detail"
            android:parentActivityName=".OrderListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.bleepr.floor.bleepriofloormanagement.OrderListActivity" />
        </activity>
    </application>

</manifest>
